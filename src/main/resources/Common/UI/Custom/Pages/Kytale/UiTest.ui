$C = "../../Common.ui";

$C.@PageOverlay {
  $C.@Container {
    Anchor: (Width: 550, Height: 650);

    #Title {
      Group {
        Label {
          Style: (FontSize: 24, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center);
          Text: "UI Test - Page 1";
        }
      }
    }

    #Content {
      LayoutMode: Top;
      Group #NavBar {
        Padding: (Horizontal: 16, Vertical: 12);
        LayoutMode: Left;
        $C.@TextButton #NavPage1 {
          Anchor: (Height: 36);
          FlexWeight: 1;
          Text: "1: Inputs";
          Style: TextButtonStyle(
            Default: (Background: #c4a23a, LabelStyle: (FontSize: 14, TextColor: #121a26, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
            Hovered: (Background: #d4b24a, LabelStyle: (FontSize: 14, TextColor: #121a26, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
            Sounds: $C.@ButtonSounds,
          );
        }
        $C.@TextButton #NavPage2 {
          Anchor: (Height: 36, Left: 8);
          FlexWeight: 1;
          Text: "2: Data";
          Style: TextButtonStyle(
            Default: (Background: #1a2636, LabelStyle: (FontSize: 14, TextColor: #bfcdd5, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
            Hovered: (Background: #243448, LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
            Sounds: $C.@ButtonSounds,
          );
        }
        $C.@TextButton #NavPage3 {
          Anchor: (Height: 36, Left: 8);
          FlexWeight: 1;
          Text: "3: Actions";
          Style: TextButtonStyle(
            Default: (Background: #1a2636, LabelStyle: (FontSize: 14, TextColor: #bfcdd5, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
            Hovered: (Background: #243448, LabelStyle: (FontSize: 14, TextColor: #ffffff, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
            Sounds: $C.@ButtonSounds,
          );
        }
      }
      Group #PageTitle {
        Padding: (Horizontal: 16, Vertical: 8);
        Label {
          Style: (FontSize: 24, TextColor: #ffffff, RenderBold: true);
          Text: "Input Controls";
        }
      }
      Group #TextFieldSection {
        Padding: (Horizontal: 16, Vertical: 12);
        LayoutMode: Top;
        Label {
          Style: (FontSize: 16, TextColor: #c4a23a, RenderBold: true);
          Text: "Text Input";
        }
        Group {
          Padding: (Top: 10);
          LayoutMode: Left;
          Label {
            Anchor: (Width: 90);
            Style: (FontSize: 14, TextColor: #7c8b99, VerticalAlignment: Center);
            Text: "Username:";
          }
          $C.@TextField #UsernameInput {
            @Anchor = (Width: 200, Height: 34);
            PlaceholderText: "Enter username...";
          }
        }
        Group {
          Padding: (Top: 8);
          LayoutMode: Left;
          Label {
            Anchor: (Width: 90);
            Style: (FontSize: 14, TextColor: #7c8b99, VerticalAlignment: Center);
            Text: "Search:";
          }
          $C.@TextField #SearchInput {
            @Anchor = (Width: 150, Height: 34);
            PlaceholderText: "Search...";
          }
          $C.@TextButton #SearchButton {
            Anchor: (Width: 70, Height: 34, Left: 8);
            Text: "Search";
            Style: TextButtonStyle(
              Default: (Background: #c4a23a, LabelStyle: (FontSize: 14, TextColor: #121a26, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
              Hovered: (Background: #d4b24a, LabelStyle: (FontSize: 14, TextColor: #121a26, RenderBold: true, HorizontalAlignment: Center, VerticalAlignment: Center)),
              Sounds: $C.@ButtonSounds,
            );
          }
        }
      }
      Group #SliderSection {
        Padding: (Horizontal: 16, Vertical: 12);
        LayoutMode: Top;
        Label {
          Style: (FontSize: 16, TextColor: #c4a23a, RenderBold: true);
          Text: "Sliders";
        }
        Group {
          Padding: (Top: 10);
          LayoutMode: Left;
          Label {
            Anchor: (Width: 90);
            Style: (FontSize: 14, TextColor: #7c8b99, VerticalAlignment: Center);
            Text: "Volume:";
          }
          Slider #VolumeSlider {
            Anchor: (Width: 180, Height: 20);
            Style: $C.@DefaultSliderStyle;
            Min: 0;
            Max: 100;
            Value: 75;
          }
          Label #VolumeValue {
            Anchor: (Width: 50, Left: 10);
            Style: (FontSize: 14, TextColor: #ffffff, VerticalAlignment: Center);
            Text: "75%";
          }
        }
        Group {
          Padding: (Top: 8);
          LayoutMode: Left;
          Label {
            Anchor: (Width: 90);
            Style: (FontSize: 14, TextColor: #7c8b99, VerticalAlignment: Center);
            Text: "Brightness:";
          }
          Slider #BrightnessSlider {
            Anchor: (Width: 180, Height: 20);
            Style: $C.@DefaultSliderStyle;
            Min: 0;
            Max: 100;
            Value: 50;
          }
          Label #BrightnessValue {
            Anchor: (Width: 50, Left: 10);
            Style: (FontSize: 14, TextColor: #ffffff, VerticalAlignment: Center);
            Text: "50%";
          }
        }
      }
      Group #CheckboxSection {
        Padding: (Horizontal: 16, Vertical: 12);
        LayoutMode: Top;
        Label {
          Style: (FontSize: 16, TextColor: #c4a23a, RenderBold: true);
          Text: "Options";
        }
        Group {
          Padding: (Top: 10);
          LayoutMode: Left;
          Group {
            Anchor: (Width: 150);
            LayoutMode: Left;
            $C.@CheckBox #EnableSounds {
              Value: true;
            }
            Label {
              Anchor: (Left: 8);
              Style: (FontSize: 13, TextColor: #ffffff, VerticalAlignment: Center);
              Text: "Enable Sounds";
            }
          }
          Group {
            Anchor: (Width: 150, Left: 20);
            LayoutMode: Left;
            $C.@CheckBox #AutoSave {
              Value: false;
            }
            Label {
              Anchor: (Left: 8);
              Style: (FontSize: 13, TextColor: #ffffff, VerticalAlignment: Center);
              Text: "Auto-Save";
            }
          }
        }
        Group {
          Padding: (Top: 8);
          LayoutMode: Left;
          Group {
            Anchor: (Width: 150);
            LayoutMode: Left;
            $C.@CheckBox #ShowHints {
              Value: true;
            }
            Label {
              Anchor: (Left: 8);
              Style: (FontSize: 13, TextColor: #ffffff, VerticalAlignment: Center);
              Text: "Show Hints";
            }
          }
          Group {
            Anchor: (Width: 150, Left: 20);
            LayoutMode: Left;
            $C.@CheckBox #DarkMode {
              Value: false;
            }
            Label {
              Anchor: (Left: 8);
              Style: (FontSize: 13, TextColor: #ffffff, VerticalAlignment: Center);
              Text: "Dark Mode";
            }
          }
        }
      }
      Group #DropdownSection {
        Padding: (Horizontal: 16, Vertical: 12);
        LayoutMode: Top;
        Label {
          Style: (FontSize: 16, TextColor: #c4a23a, RenderBold: true);
          Text: "Dropdown";
        }
        Group {
          Padding: (Top: 10);
          LayoutMode: Left;
          Label {
            Anchor: (Width: 90);
            Style: (FontSize: 14, TextColor: #7c8b99, VerticalAlignment: Center);
            Text: "Category:";
          }
          $C.@DropdownBox #CategoryDropdown {
            @Anchor = (Width: 200, Height: 34);
            NoItemsText: "Select category...";
          }
        }
      }
    }
  }
}

$C.@BackButton {}
